        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            border: 1px solid black;
            padding: 10px; /* Zadanie 1: Podstawowe marginesy wewnętrzne */
        }
        .double-margin {
            margin: 20px 10px; /* Zadanie 2: Zapis Podwójny Marginesu */
        }
        .triple-margin {
            margin: 30px 20px 10px 20px; /* Zadanie 3: Zapis Potrójny Marginesu */
        }
        .quadruple-margin {
            margin: 40px 30px 20px 10px; /* Zadanie 4: Zapis Poczwórny Marginesu */
        }
        .selected-margins {
            margin-top: 15px; /* Zadanie 5: Marginesy Dla Wybranych Stron */
            margin-right: 25px;
            margin-bottom: 35px;
            margin-left: 45px;
        }
    </style>
</head>
